DEFINITION MODULE ConvertReal;
 

  EXPORT QUALIFIED
	RealToStr, StrToReal;


  PROCEDURE RealToStr( real       : REAL;
		       width      : CARDINAL; (* width of field in chars *)
		       decPlaces  : INTEGER;  (* neg  --> exp. notation *)
					      (* zero --> no dec point  *)
		       VAR str	   : ARRAY OF CHAR;
		       VAR success : BOOLEAN );

  PROCEDURE StrToReal(     str	   : ARRAY OF CHAR;
		       VAR real	   : REAL;
		       VAR success : BOOLEAN );

END ConvertReal.
